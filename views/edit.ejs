<html>
    <body>
        <form action="update" method="POST" enctype="multipart/form-data">
            	Name: <input name="name" value=<%= restaurant.name %>><br>
		borough: <input name="borough" value=<%= restaurant.borough %>><br>
             	Cuisine: <input name="cuisine" value=<%= restaurant.cuisine %> /><br>
		Street: <input name="street" value=<%= restaurant.address.street %> /><br>
		Building: <input name="building" value=<%= restaurant.address.building %> /><br>
		Zipcode: <input name="zipcode" value=<%= restaurant.address.zipcode %> /><br>
		GPS Coordinates (lat.): <input name="gpslat" value=<%= restaurant.address.coord[0] %> /><br>
		GPS Coordinates (lon.): <input name="gpslon" value=<%= restaurant.address.coord[1] %> /><br>
    Photo: <input type="file" name="filetoupload"><br>
            <input type="hidden" name="_id" value=<%= restaurant._id %>>
            <input type="submit" value="update">
        </form>
    </body>
</html>
