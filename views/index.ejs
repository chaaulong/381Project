<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="BasicAuth">
  <meta name="author" content="siddub">

    <title>Main</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<body>

<div class="container">
  <div class="row">
    <div class="col">
      <p>Welcome, <%= name %></p>
    </div>
    <div class="col">
      <a href='/logout'>Logout</a>
    </div>
  </div>
</div>
<div class="container">
	<h1>Restaurants</h1>
	<h2>Showing <%= locals.count %> documents</h2>
    <div class="row">
      <div class="col-xs-3">
        <a href="/create" class="btn btn-primary" role="button">Create new restaurant</a>
      </div>
      <div class="col-xs-6"></div>
      <div class="col-xs-3">
	<a href="/search" class="btn btn-primary" role="button">Search restaurant</a>
      </div>
    </div>
    <hr>
		<table>
		    <% for(var i=0; i < locals.count; i++) { %>
          <tr>
            <td><%= i+1 %>. <a href="/display?_id=<%= restaurants[i]._id %>"><%= restaurants[i].name %></a></td>
          </tr>
        <% } %>
    </table>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>


<style>
input{
  margin-bottom: 15px
}
h1, h2{
  text-align: center
}
.container{
  width:50%
}

</style>

</body>
</html>
